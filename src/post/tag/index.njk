---
pageTag: tag
layout: layout/main.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - ephemera
    - publicPosts
    - feedPosts
    - post
    - project
permalink: /post/tag/{{ tag }}/
mainClass:
  - "center"
---

<section class="post-list">
	<h2><a href="/post/tag/{{ tag }}" aria-current="page">#{{ tag }}</h2>
	<ol role="list">
		{% set posts = collections[ tag ] %}
		{%- for post in posts | reverse -%}
		<li><a href="{{ post.url }}">{{ post | postTitle }}</a>{{ post.date | toTimeTag | safe }}</li>
		{%- endfor -%}
	</ol>
</section>
