<section class="post-list">
    <h2>Recent Posts</h2>
    <ol role="list">
        {%- for post in collections.feedPosts | reverse -%}
        <li><a href="{{ post.url }}">{{ post | postTitle }}</a>{{ post.date | toTimeTag | safe }}</li>
        {%- endfor -%}
    </ol>
</section>
